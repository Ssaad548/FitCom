<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitCom.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitCom"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#B9582D"
    Shell.TitleColor="#FFBE92"
    Shell.TabBarBackgroundColor="#E8D6B9"
    Shell.TabBarTitleColor="#B9582D"
    Shell.TabBarForegroundColor ="#B9582D"
    Shell.TabBarUnselectedColor="#411400"
    Title="FitCom">

    <TabBar>
        <Tab Title="Statistics" Icon="statistics.svg">
            <ShellContent
                Title="Statistics"
                ContentTemplate="{DataTemplate local:StatsPage}"
                Route="StatsPage" />
        </Tab>
        
        <Tab Title="Home" Icon="home.svg">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        
        <Tab Title="Profile" Icon="user.svg">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate local:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
        
        <Tab Title="About" Icon="about.svg">
            <ShellContent
                Title="About Us"
                ContentTemplate="{DataTemplate local:AboutPage}"
                Route="AboutPage" />
        </Tab>
    </TabBar>



</Shell>
